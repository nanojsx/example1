{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",

    "rootDir": "src",
    "outDir": "dist",

    "jsx": "react-jsx",
    "jsxImportSource": "nano-jsx",

    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
